<% provide(:title, 'Sign up')%>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Name Surname' %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'user@example.com' %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Your Password' %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: 'Your Password Again'%>

      <%= f.submit 'Create My Account', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

